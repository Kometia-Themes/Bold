{% extends 'layout.twig' %}

{% block body %}
<div class="container-fluid customer">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 header">
      {% include '_titles.twig' with {title: 'Iniciar Sesión', uppercase: settings.heading_uppercase_titles} only %}
      <hr class="spacer">
    </div>
  </div>
  <div class="row content">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    {% form 'customer_login' 'role="form" class="login-form"' %}
      <div class="row row__inputs">
        <div class="col-xs-12">
          <div class="form-group">
            <div class="input-group input-group-lg login-form__input">
              <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Correo electrónico" required>
            </div>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="form-group">
            <div class="input-group input-group-lg login-form__input">
              <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Contraseña" required>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 text-center">
          <div class="form-group">
            <a href="/cuenta/recuperar">¿Olvidaste tu contraseña?</a>
          </div>
          <div class="form-group">
            <input class="btn btn-success login-form__button" type="submit" name="submit" id="submit" value="&nbsp; Iniciar sesión &nbsp;">
          </div>
          ¿No estás registrado? <a href="/cuenta/registro">Crear cuenta</a>
        </div>
      </div>
    {% endform %}

    </div>
  </div> <!-- .content -->
</div> <!-- .container-fluid -->
{% endblock %}
