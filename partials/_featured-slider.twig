{% if settings.slide_1 or settings.slide_2 or settings.slide_3 or settings.slide_4 %}
<div class="container-fluid featured-slider-home">
  <div class="slider">

  {% for i in 1..4 %}
    {% set slide = 'slide_'~i %}
      {% if settings[slide] %}
        {% if settings['slide_'~i~'_img_background'] is not empty and settings['slide_'~i~'_img'] %}
          {% set slide_bg = settings['slide_'~i~'_img_background'] %}
          <div class="slide {{ slide }}" style="background-image: url('{{ settings['slide_'~i~'_img_background'] }}');">
        {% else %}
          <div class="slide {{ slide }}">
        {% endif %}
          <div class="container-fluid">
            {% if settings.slider_has_overlay %}
            <div class="slider_overlay"></div>  <!-- .slider_overlay -->
            {% endif %}
            <div class="row">
              <div class="col-xs-12 content description_{{i}}">
                <div class="outher">
                  <div class="inner"> 
                    <h2 class="title {% if settings.slider_text_has_overlay %}text-shadow{% endif %}" style="color: {{ settings['slide_'~i~'_title_color'] }}">
                      {% if settings.heading_uppercase_titles %}{{ settings['slide_'~i~'_title'] | upper }}{% else %}{{ settings['slide_'~i~'_title'] }}{% endif %}
                    </h2>
                    <p class="description_text {% if settings.slider_text_has_overlay %}text-shadow{% endif %}">{{ settings['slide_'~i~'_description'] }}</p>
                    {% if settings['slide_'~i~'_btn'] and settings['slide_'~i~'_btn_text'] %}
                    <a class="btn btn-lg btn__slide" href="{{ settings['slide_'~i~'_btn_buy_link'] }}">{{ settings['slide_'~i~'_btn_text'] }}</a>
                    {% endif %}
                  </div>
                </div>
              </div>  <!-- .slideNum -->
            </div>  <!-- .row -->
           </div>  <!-- .container -->
           <div class="bar"></div>
           <div class="white-bar"></div>
          </div>  <!-- .slide -->
    {% endif %}
  {% endfor %}
  </div> <!-- .slider -->
</div> <!-- .container-fluid .featured-slider-home -->

<div class="container-fluid featured-slider-home-nav hidden-xs">
  <div class="row">
    <div class="col-xs-12">
     <div class="slider-nav">
      {% for i in 1..4 %}
        {% set brand = 'slide_'~i %}
        {% if settings[brand] %}
        <div class="slider-caption outter">
          <div class="inner {{ brand }}">
          {% if settings['slide_'~i~'_nav_show_brand_img'] and settings['slide_'~i~'_nav_brand_img'] is not empty %}
            <img class="logotype" src="{{ settings['slide_'~i~'_nav_brand_img'] }}" width="150">
          {% else %}
            <h3 class="slider-caption__brand">{{ settings['slide_'~i~'_nav_brand_text'] }}</h3>
          {% endif %}
          </div>
        </div>  <!-- .slider-caption -->
        {% endif %}

      {% endfor %}
      </div> <!-- .slider-nav -->
    </div>  <!-- .carousel-nav -->
  </div>  <!-- .row -->
</div> <!-- .container-fluid -->

{% endif %}
