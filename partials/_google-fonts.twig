{% if 'Google' in settings.heading_font %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.heading_font | remove('Google+') }}{% if settings.heading_font_weight is not empty %}:{{ settings.heading_font_weight }}{% endif %}">
{% endif %}
{% if 'Google' in settings.slide_heading_font %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.slide_heading_font | remove('Google+') }}{% if settings.slide_heading_font_weight is not empty %}:{{ settings.slide_heading_font_weight }}{% endif %}">
{% endif %}

{% if 'Google' in settings.base_font and settings.base_font != settings.heading_font %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.base_font | remove('Google+') }}{% if settings.base_font_weight is not empty %}:{{ settings.base_font_weight }}{% endif %}">
{% endif %}

