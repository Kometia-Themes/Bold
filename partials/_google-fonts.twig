{% set heading = settings.heading_font~settings.heading_font_weight %}
{% set slide = settings.slide_heading_font~settings.slide_heading_font_weight %}
{% set subheading = settings.subheading_font~settings.subheading_font_weight %}
{% set body = settings.body_font~settings.body_font_weight %}

{% if 'Google' in settings.heading_font %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.heading_font | remove('Google+') }}{% if settings.heading_font_weight is not empty %}:{{ settings.heading_font_weight }}{% endif %}">
{% endif %}
{% if 'Google' in settings.slide_heading_font and slide != heading %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.slide_heading_font | remove('Google+') }}{% if settings.slide_heading_font_weight is not empty %}:{{ settings.slide_heading_font_weight }}{% endif %}">
{% endif %}
{% if 'Google' in settings.subheading_font and subheading != slide %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.subheading_font | remove('Google+') }}{% if settings.subheading_font_weight is not empty %}:{{ settings.subheading_font_weight }}{% endif %}">
{% endif %}
{% if 'Google' in settings.body_font and body != subheading %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.body_font | remove('Google+') }}{% if settings.body_font_weight is not empty %}:{{ settings.body_font_weight }}{% endif %}">
{% endif %}
